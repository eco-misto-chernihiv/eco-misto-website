---
// Tools

// Compositions
import Center from "../compositions/Center.astro";
import Stack from "../compositions/Stack.astro";

// Components
import Marquee from "../ui/Marquee.astro";
import Text from "../ui/Text.astro";
import MyIcon from "../ui/MyIcon.astro";

// Assets
const donors = [
  {
    name: "donors-usaid",
  },
  {
    name: "donors-ednannya",
  },
  {
    name: "donors-czech",
  },
  {
    name: "donors-eed",
  },
  {
    name: "donors-ua-cult-fond",
  },
  {
    name: "donors-evz",
  },
  {
    name: "donors-undp",
  },
];
---

<section class="donors">
  <Center maxWidth="125rem" space="space-4">
    <Stack space="space-9">
      <div class="title">
        <Text
          tagName="div"
          size="medium"
          class="font-medium"
          isBadge
          variant="neutral">Донори</Text
        >
      </div>

      <Marquee direction="left" space="space-4" duration="slow">
        <div class="donor-logos marquee-inner">
          {
            donors.map((donor) => {
              return (
                <div class="donor-logo">
                  <MyIcon name={donor.name} />
                  {/* <Icon name={donor.name} /> */}
                </div>
              );
            })
          }
        </div>
      </Marquee>
    </Stack>
  </Center>

  <style>
    @import "@styles/04-utilities/breakpoints.css";

    .donors {
      --_padding: var(--space-10-fixed);

      /* color: var(--color-secondary); */
      padding-block: var(--_padding);
      /* background-color: rebeccapurple; */

      @media (--tablet-and-up) {
        --_padding: var(--space-11-fixed);
      }
    }

    .donor-logos {
      & :global(svg) {
        /* width: 100%; */
        height: 100%;
        fill: currentColor;
      }
    }

    .donor-logo {
      width: 160px;
      height: 40px;

      display: flex;
      align-items: center;
      justify-content: center;

      @media (--tablet-and-up) {
        width: 300px;
        height: 64px;
      }

      /* padding-block: var(--space-5-fixed); */
    }

    .title {
      display: flex;
      justify-content: center;
    }

    .red {
      border: 1px solid red;
    }
  </style>
</section>
