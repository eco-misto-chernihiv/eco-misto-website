---
// Tools
import type { Lang } from "@/i18n/defaultLangOptions";

// Compositions
import Cluster from "./compositions/Cluster.astro";

// Components
import Text from "./ui/Text.astro";

// Data
import { donateText } from "@/data/siteData.ts";

const currentLocale = Astro.currentLocale as Lang;
const text = donateText[currentLocale];
const id = crypto.randomUUID();
---

<Cluster alignItems="center" class="checkbox-group">
  <Text
    tagName="label"
    size="small"
    for={`consent-${id}`}
    class="color-gray-400">{text.consent}</Text
  >
  <input type="checkbox" name="consent" id={`consent-${id}`} required />
</Cluster>

<style>
  .checkbox-group {
    & label {
      order: 2;
    }

    & input[type="checkbox"] {
      cursor: pointer;
      width: 24px;
      height: 24px;

      outline-color: var(--color-primary);
      accent-color: var(--color-primary);
      border-radius: var(--rounded-md);

      order: 1;
    }
  }
</style>
