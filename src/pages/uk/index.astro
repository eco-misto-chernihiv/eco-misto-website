---
// Server rendered
export const prerender = false;

// Astro tools

// Layouts
import BaseLayout from "@/layouts/BaseLayout.astro";

// Components
import Mission from "@/components/home/Mission.astro";
import Team from "@/components/home/Team.astro";
import Hero from "@/components/home/Hero.astro";
import Youtube from "@/components/home/Youtube.astro";
import Donors from "@/components/home/Donors.astro";
import Partners from "@/components/home/Partners.astro";
import Projects from "@/components/home/Projects.astro";

/*  
* Enable ISR on Netlify, allowing your page to be served from the cache for 24 hours, with the ability to serve stale content for up to a week while a new version is generated in the background.
* 
* public: Indicates that the response can be cached by both private and shared caches.
* max-age=0: Tells the browser not to cache the page.
* s-maxage=86400: Instructs CDNs (like Netlify) to cache the page for 24 hours (86400 seconds).
stale-while-revalidate=604800: Allows serving a stale version for up to a week (604800 seconds) while revalidating in the background.
*/
Astro.response.headers.set(
  "Cache-Control",
  "public, max-age=0, s-maxage=86400, stale-while-revalidate=604800"
);
---

<BaseLayout>
  <Hero />
  <Donors />
  <Mission />
  <Projects />
  <Partners />
  <Team />
  <Youtube />
</BaseLayout>
