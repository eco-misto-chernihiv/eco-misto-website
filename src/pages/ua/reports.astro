---
// Tools
import type { Lang } from "@/i18n/defaultLangOptions";

// Layouts
import BaseLayout from "@/layouts/BaseLayout.astro";

// Compositions
import Center from "@/components/compositions/Center.astro";

// Components
import Hero from "@/components/reports/Hero.astro";

// Data
import Stack from "@/components/compositions/Stack.astro";
import ReportsSection from "@/components/reports/ReportsSection.astro";

// Translations
const currentLocale = Astro.currentLocale as Lang;

const title = currentLocale === "ua" ? "Звітність" : "Reports";
---

<BaseLayout seo={{ title }}>
  <Center
    maxWidth="87.5rem"
    space={{ default: "space-6", tablet: "space-7", laptop: "space-9" }}
  >
    <Stack space="space-10">
      <Hero />
      <ReportsSection />
    </Stack>
  </Center>
</BaseLayout>
