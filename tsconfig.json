{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@compositions/*": ["src/components/compositions/*"],
      "@ui/*": ["src/components/ui/*"],
      "@styles/*": ["src/styles/*"]
    }
  }
}
